<%= form_with(model: chatbot) do |form| %>
  <% if chatbot.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(chatbot.errors.count, "error") %>
        prohibited this chatbot from being saved:</h2>
      <ul>
        <% chatbot.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :participant_id, "Participant ID", class: "label" %>
    <div class="control">
      <%= form.text_field :participant_id,
                      class: "input",
                      style: "width:200px",
                      required: true %>
    </div>
  </div>
  <div class="field">
    <%= form.label :chatbot_type, class: "label" %>
    <div class="control">
      <div class="select">
        <%= form.select :chatbot_type, Chatbot::CHATBOT_TYPES %>
      </div>
    </div>
  </div>
  <div class="control">
    <%= form.button "Create", type: :submit, class: "button is-link" %>
  </div>
<% end %>
